{
  "name": "@marcellodotgg/ngx-validators",
  "description": "A series of Angular Form Validators to help speed up common validation scenarios by extending the ones provided by the Angular team.",
  "keywords": [
    "angular",
    "validator",
    "validations",
    "validate",
    "reactive-forms",
    "angular-forms"
  ],
  "version": "0.0.9",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:pages": "ng build --output-path=dist --base-href='/ngx-validators/' --project demo",
    "build:docs": "npx typedoc --plugin typedoc-github-theme",
    "deploy": "npm run build:pages && npm run build:docs && npx angular-cli-ghpages --dir=dist/browser",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --coverage --project ngx-validators",
    "test:watch": "ng test --watch --coverage --project ngx-validators",
    "docs:watch": "npx typedoc --plugin typedoc-github-theme --watch --preserveWatchOutput"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "url": "https://github.com/marcellodotgg/ngx-validators",
    "type": "git"
  },
  "author": {
    "name": "Marcello",
    "email": "hey@marcello.gg"
  },
  "dependencies": {
    "@angular/animations": "^19.1.0",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/forms": "^19.1.0",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@nx/devkit": "^20.3.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "typedoc-github-theme": "^0.2.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/platform": "^1.12.2",
    "@analogjs/vite-plugin-angular": "^1.12.2",
    "@analogjs/vitest-angular": "^1.12.2",
    "@angular-devkit/build-angular": "^19.1.4",
    "@angular/build": "^19.1.4",
    "@angular/cli": "^19.1.4",
    "@angular/compiler-cli": "^19.1.0",
    "@nx/vite": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^22.0.0",
    "ng-packagr": "^19.1.0",
    "typedoc": "^0.27.6",
    "typescript": "~5.7.2",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
